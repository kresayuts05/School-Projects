@using HireProgrammer.Extensions;
@model PostFormViewModel

@{
    this.ViewData["Style"] = "create.css";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="@Model.Benefits" class="form-label">Benefits</label>
                <input asp-for="@Model.Benefits" class="form-control" aria-required="" />
                <span asp-validation-for="Benefits" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HiringPosition" class="form-label">HiringPosition</label>
                <input type="text" asp-for="@Model.HiringPosition" class="form-control" aria-required="" />
                <span asp-validation-for="HiringPosition" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="@Model.StartingSalary" class="form-label">StartingSalary</label>
                <input type="text" asp-for="@Model.StartingSalary" class="form-control" aria-required="" />
                <span asp-validation-for="StartingSalary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.WorkingHours" class="form-label">WorkingHours</label>
                <input type="text" asp-for="@Model.WorkingHours" class="form-control" aria-required="" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>
            <br>

            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Save" />
                <a asp-controller="Post" asp-action="Mine" class="ml-2 btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script type="module" src="/js/create.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="/css/create.css" asp-append-version="true">
}