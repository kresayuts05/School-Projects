@model RegisterFirmViewModel
@{
}

<div class="form_wrapper">
    <div class="form_container">
        <div class="title_container">
            <h2>Registration Form For Firm</h2>
        </div>
        <div class="row clearfix">
            <div class="">
                <form method="post" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="input_field">
                            <span asp-validation-for="Name" class="text-white"></span>
                            <input type="text" name="name" placeholder="Name" required />
                        </div>
                        <div class="input_field">
                            <span asp-validation-for="Email"></span>
                            <input type="email" name="email" placeholder="Email" required />
                        </div>
                        <div class="input_field">
                            <span asp-validation-for="Password"></span>
                            <input type="password" name="password" placeholder="Password" required />
                        </div>
                        <div class="input_field">
                            <span asp-validation-for="Address"></span>
                            <input type="text" name="address" placeholder="Address" required />
                        </div>
                        <div class="input_field">
                            <span asp-validation-for="PhoneNumber"></span>
                            <input type="text" name="phoneNumber" placeholder="Phone Number" required />
                        </div>
                        <div class="input_field">
                            <span asp-validation-for="Country"></span>
                            <input type="text" name="country" placeholder="Country" required />
                        </div>
                        <div class="input_field">
                            <span asp-validation-for="City"></span>
                            <input type="text" name="city" placeholder="City" required />
                        </div>
                    </div>
                    <br>
                    <input class="button" type="submit" value="Register" />
                </form>
            </div>
        </div>
    </div>
    <a asp-controller="Account" asp-action="RegisterAsProgrammer" class="credit">I want to register as <b>Programmer</b></a>
    <br>
    <a asp-controller="Account" asp-action="Login" class="credit">I already have a registration. <b>Log in</b></a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}